<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nishangunawardena.costgurdapp.PopUpWindow">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#4ca4ba"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#549dab"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Reg No.&#10;ලියාපදිංචි අංකය"
                android:id="@+id/regName"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/txtRegNumber"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/regName"
                android:layout_toRightOf="@+id/regName"
                android:layout_alignBottom="@+id/regName"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignLeft = "@+id/txtContactHome"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Boat Name&#10;බෝට්ටු නම"
                android:id="@+id/boatName"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/regName"
                android:layout_alignStart="@+id/contactMobile"
                android:layout_alignLeft="@+id/contactMobile"


                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/txtBoatName"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/boatName"
                android:layout_toRightOf="@+id/boatName"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/boatName"
                android:layout_alignLeft = "@+id/txtContactHome"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="High seas license number&#10;මහ මුහුදේ බලපත්ර අංකය"
                android:id="@+id/HighSeasLicense"
                android:textColor="#000000"
                android:layout_below="@+id/boatName"
                android:layout_alignLeft="@+id/regName"
                android:layout_alignStart="@+id/regName"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/regName"
                android:layout_alignEnd="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtHighSeasLicense"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/HighSeasLicense"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/HighSeasLicense"
                android:layout_toRightOf="@+id/HighSeasLicense"
                android:gravity="center_vertical"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Boat length&#10;බෝට්ටුවේ දිග"
                android:id="@+id/boatLength"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/HighSeasLicense"
                android:layout_alignStart="@+id/regName"
                android:layout_alignLeft="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtBoatLength"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/boatLength"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/boatLength"
                android:layout_toRightOf="@+id/boatLength"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Gross tonnage&#10;දළ බර"
                android:id="@+id/grossTonnage"
                android:textColor="#000000"
                android:layout_below="@+id/boatLength"
                android:layout_alignLeft="@+id/regName"
                android:layout_alignStart="@+id/regName"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/regName"
                android:layout_alignEnd="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtGrossTonnage"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/grossTonnage"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/grossTonnage"
                android:layout_toRightOf="@+id/grossTonnage"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Call sign&#10;ඇමතුම් ලකුණ"
                android:id="@+id/callSign"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/grossTonnage"
                android:layout_alignStart="@+id/regName"
                android:layout_alignLeft="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCallSign"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/callSign"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/callSign"
                android:layout_toRightOf="@+id/callSign"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Owner name&#10;හිමිකරුගේ නම"
                android:id="@+id/ownerName"
                android:textColor="#000000"
                android:layout_below="@+id/txtCallSign"
                android:layout_alignLeft="@+id/regName"
                android:layout_alignStart="@+id/regName"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/regName"
                android:layout_alignEnd="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtOwnerName"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/ownerName"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/ownerName"
                android:layout_toRightOf="@+id/ownerName"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="Contact mobile&#10;ජංගම දුරකථන අංකය"
                android:id="@+id/contactMobile"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ownerName"
                android:layout_alignStart="@+id/regName"
                android:layout_alignLeft="@+id/regName"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtcontactMobile"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/contactMobile"
                android:layout_alignLeft="@+id/txtContactHome"
                android:layout_alignStart="@+id/txtContactHome"
                android:layout_alignBottom="@+id/contactMobile"
                android:layout_toRightOf="@+id/contactMobile"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:text="High seas license number&#10;ස්ථාවර දුරකථන අංකය"
                android:id="@+id/contactHome"
                android:textColor="#000000"
                android:layout_below="@+id/contactMobile"
                android:layout_alignLeft="@+id/regName"
                android:layout_alignStart="@+id/regName"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:layout_width="200dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtContactHome"
                android:editable="false"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignTop="@+id/contactHome"
                android:layout_alignBottom="@+id/contactHome"
                android:layout_toRightOf="@+id/contactHome"
                android:gravity="center_vertical"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Close"
                android:clickable ="true"
                android:id="@+id/btnclose"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:enabled="true" />

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>

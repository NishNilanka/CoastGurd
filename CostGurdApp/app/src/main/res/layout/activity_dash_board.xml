<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nishangunawardena.costgurdapp.DashBoard"
    android:background="#144d52">

    <LinearLayout
        android:id = "@+id/LineraLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:columnCount="3"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/departure"
                android:layout_width="175dp"
                android:layout_height="200dp"

                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/departure"
                android:clickable="true"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/arrival"
                android:background="@color/colorPrimaryDark"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/arrival"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/liveMap"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/map"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>

        </GridLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LineraLayout1"
        android:layout_marginTop="10dp"
        android:background="#144e41">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:id="@+id/boatGrid"
            android:layout_below="@+id/LineraLayout1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <Button
                android:layout_width="175dp"
                android:layout_height="125dp"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:text="All Boats&#10;සියලු බොට්ටු"
                android:id="@+id/allBoats"
                android:textAllCaps="false"

                />

            <Button
                android:layout_width="175dp"
                android:layout_height="125dp"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:text="Boats to be deported&#10;පිටත් වීමට නියමිත බොට්ටු"
                android:id="@+id/toBeDeparture"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                />

            <Button
                android:layout_width="175dp"
                android:layout_height="125dp"
                android:text="Boats Within Reporting Range - Arrival&#10;වාර්තා පරාසය තුළ බෝට්ටු- පැමිණීම"
                android:layout_marginLeft="10dp"
                android:id="@+id/btnreportingRange"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                />

            <Button
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:text="Arrived Boats&#10;පැමිණි බෝට්ටු"
                android:id="@+id/arrived"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:text="FI Approved Boats - Arrival&#10;FI අනුමත බෝට්ටු - පැමිණීම"
                android:id="@+id/FIapproved"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:text="QC Approved Boats - Arrival&#10;QC අනුමත බෝට්ටු - පැමිණීම"
                android:id="@+id/QCapproved"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"/>
        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/boatGrid"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boatText"
                android:textColor="#000000"
                android:gravity="center"
                android:text=""
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse" />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nishangunawardena.costgurdapp.DashBoard"
    android:background="#144d52">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/layoutFirst"
        android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/linearLayout"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnDeparture"
            android:src="@drawable/departure"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_weight="1"
            android:background="#197965"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:maxHeight="263dp" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnArrival"
            android:src="@drawable/arrival"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#197965"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:maxHeight="263dp" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnMap"
            android:src="@drawable/map"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:background="#197965"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:maxHeight="263dp" />

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/linearLayout1"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnAllBoats"
                android:src="@drawable/allboatsp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:layout_weight="1"
                android:background="#197965"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxHeight="263dp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnLeving"
                android:src="@drawable/leavingboats"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#197965"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:maxHeight="263dp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnArriving"
                android:src="@drawable/arrivingboats"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:background="#197965"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:maxHeight="263dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/linearLayout11"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnArrived"
                android:src="@drawable/arrivedboats"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:layout_weight="1"
                android:background="#197965"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxHeight="263dp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnFIapproaval"
                android:src="@drawable/fiapprovedboats"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#197965"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:maxHeight="263dp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnQCApproved"
                android:src="@drawable/qcapprovedboats"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:background="#197965"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:maxHeight="263dp" />

        </LinearLayout>
       </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/layoutFirst"
        android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/linearLayout3"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/boatText"
            android:textColor="#000000"
            android:gravity="center"
            android:text=""
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boatText"
            android:layout_weight="1"
            android:id="@+id/listView" />
    </LinearLayout>


    </LinearLayout>

</RelativeLayout>

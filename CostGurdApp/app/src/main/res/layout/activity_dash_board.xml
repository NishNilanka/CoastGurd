<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nishangunawardena.costgurdapp.DashBoard"
    android:background="#144d52">

    <LinearLayout
        android:id = "@+id/LineraLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:columnCount="3"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/departure"
                android:layout_width="175dp"
                android:layout_height="200dp"

                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/departure"
                android:clickable="true"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/arrival"
                android:background="@color/colorPrimaryDark"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/arrival"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/liveMap"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/map"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>



        </GridLayout>



    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="Boats Within Reporting Range - Arrival"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Arrived Boats"
            android:id="@+id/arrived"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Boats to be deported"
            android:id="@+id/toBeDeparture"
            android:layout_marginTop="15dp"
            />

        <Button
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="QC Approved Boats - Arrival"
            android:id="@+id/QCapproved"
            />

        <Button
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="FI Approved Boats - Arrival"
            android:id="@+id/FIapproved"
            />
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LineraLayout1"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boatText"
            android:textColor="#000000"
            android:text=""
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse" />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>

</RelativeLayout>
